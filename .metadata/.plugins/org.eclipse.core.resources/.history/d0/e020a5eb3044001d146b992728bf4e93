package org.serratec.exercicio01.controller;

import java.util.ArrayList;
import java.util.List;

import javax.websocket.server.PathParam;

import org.serratec.exercicio01.domain.Aluno;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
@RequestMapping("/aluno")
public class AlunoController {
	private static List<Aluno> alunos = new ArrayList<>();
	static {
		alunos.add(new Aluno(1l, "Gabriel", "66276721"));
		alunos.add(new Aluno(2l, "Leandro", "73937721"));
		alunos.add(new Aluno(3l, "Pedro", "01886721"));
		alunos.add(new Aluno(4l, "Jo√£o", "17736721"));
	}
	
	@GetMapping
	public List<Aluno> listaAlunos() {
		return alunos;
	}
	
	@GetMapping("/{matricula}")
	public Aluno buscarAluno(@PathParam Long matricula) {
		for (int i = 0; i < alunos.size(); i++) {
			Aluno aluno = alunos.get(i);
			if (aluno.getMatricula().equals(matricula)) {
				return aluno;
			}
		}
	return null;
	}
}
